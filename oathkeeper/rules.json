[
  {
    "id": "forum-api-rule",
    "upstream": { "url": "http://your-forum-api:8080" },
    "match": { "url": "http://localhost:4455/api/<.*>", "methods": ["GET", "POST"] },
    "authenticators": [{ "handler": "oauth2_introspection" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "id_token" }]
  }
]
